<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".LoginPage">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <ImageView
                                android:scaleType="fitXY"
                                android:id="@+id/avatar"
                                android:src="@drawable/imgtour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="100">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="90"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#F0F0F0" />
                                <TextView
                                    android:id="@+id/tour_detail_follow_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:drawableEnd="@drawable/flag"
                                    android:paddingRight="10dp"
                                    android:clickable="true"
                                    android:background="@drawable/gradient"/>
                            </LinearLayout>
                        </FrameLayout>
                        <LinearLayout
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="5dp"
                            android:orientation="vertical"
                            android:weightSum="125"
                            android:layout_below="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tour_detail_destination"
                                android:layout_width="wrap_content"
                                android:gravity="center|start"
                                android:layout_height="0dp"
                                android:layout_weight="25"
                                android:fontFamily="@font/calibri"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp"
                                android:drawableStart="@drawable/ic_place_red_24dp"
                                android:drawablePadding="16dp"
                                android:text="HCM - Ha Noi"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="25">
                                <ImageView
                                    android:id="@+id/tour_detail_lock_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/lock"/>
                                <TextView
                                    android:paddingLeft="16dp"
                                    android:id="@+id/tour_detail_private"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/calibri"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="12dp"
                                    android:drawablePadding="16dp"
                                    android:text="Private"
                                    android:textAlignment="center"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tour_detail_datetodate"
                                android:layout_width="wrap_content"
                                android:gravity="center|start"
                                android:layout_height="0dp"
                                android:layout_weight="25"
                                android:fontFamily="@font/calibri"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp"
                                android:drawableStart="@drawable/calendar"
                                android:drawablePadding="16dp"
                                android:text="14/5/2017 - 20/5/2017"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tour_detail_people"
                                android:layout_width="wrap_content"
                                android:gravity="center|start"
                                android:layout_height="0dp"
                                android:layout_weight="25"
                                android:fontFamily="@font/calibri"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:drawableStart="@drawable/group_of_people"
                                android:drawablePadding="16dp"
                                android:text="2 adults"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tour_detail_cash"
                                android:layout_width="wrap_content"
                                android:gravity="center|start"
                                android:layout_height="0dp"
                                android:layout_weight="25"
                                android:fontFamily="@font/calibri"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp"
                                android:drawableStart="@drawable/price_tag"
                                android:drawablePadding="16dp"
                                android:text="500.000 - 1.000.000 VND"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textColor="@android:color/holo_orange_dark"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/rate"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:fontFamily="@font/calibri"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:text="Rating >"
                        android:textColor="#2C2C2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/colorPrimary" />
                <RatingBar
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:id="@+id/pointOfTour"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#EBEBEB"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Stop Points >"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary" />
                <TextView
                    android:id="@+id/stop_point_empty"
                    android:visibility="gone"
                    android:drawableStart="@drawable/error_404"
                    android:drawablePadding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:paddingLeft="40dp"
                    android:text="Not Found"
                    android:textColor="#2C2C2C"
                    android:textSize="15sp"
                    android:letterSpacing="0.1"
                    />
                <ListView
                    android:id="@+id/list_stop_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/add_comment"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:fontFamily="@font/calibri"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:text="Comments >"
                        android:textColor="#2C2C2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary" />
                <TextView
                    android:id="@+id/comment_empty"
                    android:visibility="gone"
                    android:drawableStart="@drawable/error_404"
                    android:drawablePadding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:paddingLeft="40dp"
                    android:text="Not Found"
                    android:textColor="#2C2C2C"
                    android:textSize="15sp"
                    android:letterSpacing="0.1"
                    />

                <ListView
                    android:id="@+id/list_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/add_member"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"
                    android:text="Members >"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                    ></RelativeLayout>
                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary" />
                <TextView
                    android:id="@+id/member_empty"
                    android:visibility="gone"
                    android:drawableStart="@drawable/error_404"
                    android:drawablePadding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:paddingLeft="40dp"
                    android:text="Not Found"
                    android:textColor="#2C2C2C"
                    android:textSize="15sp"
                    android:letterSpacing="0.1"
                    />

                <ListView
                    android:id="@+id/list_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>