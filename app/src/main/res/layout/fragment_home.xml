<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteTransparent"
        android:paddingTop="10dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:background="@drawable/border_bottom"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.Toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/white_rounded_shape"
                        android:drawableLeft="@drawable/businessman"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/calibri"
                        android:hint="What are you looking for ?"
                        android:focusable="false"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="12dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#aeaeae"
                        android:textSize="14sp"
                        />
                    <LinearLayout
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        >

                        <EditText
                            android:id="@+id/numPage"
                            android:layout_width="132dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:background="@drawable/white_rounded_shape"
                            android:drawableLeft="@drawable/seo"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/calibri"
                            android:hint="Number of page ?"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="#aeaeae"
                            android:textSize="14sp" />
                        <Button
                            android:id="@+id/home_back_button"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:drawableTop="@drawable/left_chevron"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/buttonshape"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"/>
                        <Button
                            android:id="@+id/btnShow"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3.5"
                            android:text="Go"
                            android:background="@drawable/buttonshape"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"/>
                        <Button
                            android:id="@+id/home_next_button"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:drawableTop="@drawable/right_chevron"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/buttonshape"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/list_tour_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_marginTop="-2dp"
        android:divider="@null"
        android:dividerHeight="0dp"/>
</RelativeLayout>