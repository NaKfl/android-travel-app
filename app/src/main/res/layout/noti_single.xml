<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/commemt_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:weightSum="10"
            android:background="#FAFAFA">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/noti"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/noti_title"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="Name Name Name"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#1F1F1F"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/noti_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center|right"
                        android:text="12/06/1999"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#868686"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/noti_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="contentcontentcontentcontentcontentcontentcontentcontent"
                    android:textColor="#4D4D4D"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>