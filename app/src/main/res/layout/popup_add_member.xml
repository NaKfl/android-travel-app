<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp">

        <EditText
            android:id="@+id/search_member_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_shape"
            android:drawableLeft="@drawable/businessman"
            android:drawablePadding="8dp"
            android:fontFamily="@font/calibri"
            android:hint="Who are you inviting ?"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#aeaeae"
            android:textSize="14sp" />
        <TextView
            android:layout_marginVertical="20dp"
            android:id="@+id/add_member_empty"
            android:drawableStart="@drawable/error_404"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/calibri"
            android:gravity="left|center"
            android:text="Not Found"
            android:textColor="#2C2C2C"
            android:textSize="15sp"
            android:letterSpacing="0.1"
            />
        <ListView
            android:id="@+id/search_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"  />

    </LinearLayout>

</LinearLayout>
