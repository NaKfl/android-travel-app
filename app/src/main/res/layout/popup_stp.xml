<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".LoginPage">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/default_stop_point_avatar" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear1"
                            android:orientation="vertical"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/edit_showinfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_map_gray_24dp" />
                                <ImageView
                                    android:id="@+id/delete_showinfor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/edit_showinfo"
                                    android:layout_marginRight="10dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_delete_forever_black_24dp" />
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/name_stp_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/address"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/calibri"
                                android:paddingTop="12dp"
                                android:text="HCM - Ha Noi"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/stp_address_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_place_red_24dp"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/calibri"
                                android:maxLines="5"
                                android:paddingTop="12dp"
                                android:text="HCM-city"
                                android:textAlignment="center"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/stp_cost_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/price_tag"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/calibri"
                                android:paddingTop="12dp"
                                android:text="500.000 - 1.000.000 VND"
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_orange_dark"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/name_service_infor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/price_tag"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/calibri"
                                android:paddingTop="12dp"
                                android:text="Time : "
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_orange_dark"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/time_infor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/price_tag"
                                android:drawablePadding="16dp"
                                android:fontFamily="@font/calibri"
                                android:paddingTop="12dp"
                                android:text="Time : "
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_orange_dark"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/star"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="Rating"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/pointOfStp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:fontFamily="@font/calibri"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:text="Feedbacks >"
                        android:textColor="#2C2C2C"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/send_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_add_circle_black_24dp" />
                </RelativeLayout>



                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/member_empty"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:drawableStart="@drawable/error_404"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/calibri"
                    android:gravity="left|center"
                    android:letterSpacing="0.1"
                    android:paddingLeft="40dp"
                    android:text="Not Found"
                    android:textColor="#2C2C2C"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/list_stp_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="5dp"
                    android:nestedScrollingEnabled="true" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>