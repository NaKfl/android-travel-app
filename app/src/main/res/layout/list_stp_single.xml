<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        >
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
           android:id="@+id/myImageView"
           android:layout_width="wrap_content"
           android:layout_height="52dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:alpha=".9"
           android:scaleType="fitXY"
           android:src="@drawable/default_stop_point_avatar" />

       <LinearLayout
           android:layout_width="402dp"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="0dp"
           android:orientation="vertical"
           android:background="#46E7E9EC"
           android:padding="10dp">

           <TextView
               android:id="@+id/name_stp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_place_red_24dp"
               android:gravity="center|left"
               android:drawablePadding="15dp"
               android:text="HCM - Ha Noi"
               android:textAlignment="center"
               android:textColor="#2C2C2C"
               android:textSize="16dp"
               android:textStyle="bold"
               android:paddingVertical="3dp"/>
           <TextView
               android:id="@+id/stp_address"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/address"
               android:gravity="center|left"
               android:drawablePadding="15dp"
               android:paddingTop="5dp"
               android:text="123 Ngo Quyen"
               android:textAlignment="center"
               android:textColor="#2C2C2C"
               android:textSize="15dp"
               android:textStyle="bold"
               android:paddingVertical="3dp"/>

           <TextView
               android:id="@+id/stp_cost"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/price_tag"
               android:gravity="center|left"
               android:paddingTop="5dp"
               android:drawablePadding="15dp"
               android:text="500.000 - 1.000.000 VND"
               android:textAlignment="center"
               android:textSize="16dp"
               android:textColor="@android:color/holo_orange_dark"
               android:textStyle="bold"
               android:paddingVertical="3dp"/>


       </LinearLayout>
   </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>